<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginRight="20dp"
    android:background="#4DFFFFFF"
    android:padding="10dp"
    app:cardBackgroundColor="#4DFFFFFF"
    app:cardCornerRadius="20dp">


    <RelativeLayout
        android:id="@+id/rvLayoutCityItem"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#56FFFFFF">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="87dp"
            android:layout_height="51dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="13dp"
            android:src="@drawable/clouds"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_city"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_location_city_24" />

        <TextView
            android:id="@+id/rvCityName"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="city_name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/img_city" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>